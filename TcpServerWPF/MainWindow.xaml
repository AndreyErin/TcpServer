<Window x:Class="TcpServerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpServerWPF"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" x:Name="txtStatConnectServer" Height="100" VerticalScrollBarVisibility="Auto" />
        <Canvas Grid.Row="1" x:Name="cnvMainServer" Background="Beige" MouseMove="cnvMainServer_MouseMove"/>

    </Grid>
</Window>
